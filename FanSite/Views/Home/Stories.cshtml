@model FanSite.Models.StoryResponse

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>History</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body style="padding-top: 65px">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header justify-content-between">
                <a class="navbar-brand" href="/" style="color: white">Ghandi</a>
                <div class="navbar-brand navbar-right">
                    <a class="nav-link" style="color: rgb(232, 248, 85)" asp-controller="Home" asp-action="Stories">Stories</a>
                </div>
                <div class="navbar-brand navbar-right">
                    <a class="nav-link" asp-controller="Home" asp-action="History">History</a>
                </div>
                <div class="navbar-brand navbar-right">
                    <a class="nav-link" asp-controller="Sources" asp-action="Links">Links</a>
                </div>
                <div class="navbar-brand navbar-right">
                    <a class="nav-link" asp-controller="Sources" asp-action="Print">Print</a>
                </div>
                <div class="navbar-brand navbar-right">
                    <a  asp-controller="Home" asp-action="Index">Home</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <h2>Stories</h2>
        <h3 style="align-items:center"><a asp-action="UserStories">User Stories</a></h3>
        <!--It'd be nice to have a style hr here-->
        <h3>
            Ghandi is best remembered through stories about his life. Please use the form below to
            submit your own story about this historical figure:
        </h3>

        <form class="p-a-1" asp-action="Stories" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Title">Story Title:</label>
                <input class="form-control" asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Authors">Author:</label>
                <input class="form-control" asp-for="Authors" />
            </div>
            <div class="form-group">
                <label asp-for="Date">Date this happened:</label>
                <input class="form-control" asp-for="Date" />
            </div>
            <div class="form-group">
                <label asp-for="Text">Tell your story:</label>
                <textarea class="form-control" asp-for="Text" rows="3"></textarea>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">
                    Submit Story
                </button>
            </div>
        </form>
    </div>
</body>
</html>