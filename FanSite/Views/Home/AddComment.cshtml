@model String
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Add Your Comment</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container">
        <h1>Comment on story <em>@Model</em></h1>
        <form class="p-a-1" method="post">
            <div class="form-group">
                <label for="commentText">Comment:</label><br />
                <textarea class="form-control" type="text" name="commentText"></textarea><br />
            </div>
            <div class="form-group">
                <label for="commenter">Username:</label><br />
                <input class="form-control" name="commenter" /><br />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">
                    Submit Comment
                </button>
            </div>
        </form>
    </div>
</body>
</html>