@model String

@{
    Layout = "_submissionLayout";
}

@{ViewData["Title"] = "Add a Comment"; }

<div class="container">
    <h1>Comment on story <em>@Model</em></h1>
    <form class="p-a-1" method="post" asp-antiforgery="true">
        <div class="form-group">
            <label for="commentText">Comment:</label><br />
            <textarea class="form-control" type="text" name="commentText"></textarea><br />
        </div>
        <div class="form-group">
            <label for="commenter">Username:</label><br />
            <input class="form-control" name="commenter" /><br />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">
                Submit Comment
            </button>
        </div>
    </form>
</div>